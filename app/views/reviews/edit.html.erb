<h2>Edit Review</h2>

<%= simple_form_for([@book, @review]) do |fld| %>

  <div id="rating-form">
    <div>Rate Me!</div>
  </div>

  <%= fld.input :comment %>
  <%= fld.button :submit %>

<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  })
</script>
