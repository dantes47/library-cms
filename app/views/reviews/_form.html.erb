<%= simple_form_for([@book, @book.reviews.build]) do |fld| %>

<div id="rating-form">
  <div>Rate Me!</div>
</div>

  <%= fld.input :comment %>
  <%= fld.button :submit, class: "btn-custom2" %>

<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  })
</script>
