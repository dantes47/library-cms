<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(@book_show), class: "book_show" %>
  </div>

  <div class="col-md-8">
    <h2><%= @book.title %></h2>
    <h3><%= @book.author %></h3>
    <h3><%= @book.coauthor %></h3>
    <p><%= @book.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <!-- Future Block -->
  </div>
</div>

<%= link_to 'Back', root_path %>

<% if user_signed_in? %>
  <% if @book.user_id.eql?(current_user.id) %>

    <%= link_to 'Edit', edit_book_path(@book) %><hr>
    <%= link_to 'Delete', book_path(@book), data: { confirm: 'Are You Sure..?' }, method: :delete %>

  <% end %>
<% end %>
