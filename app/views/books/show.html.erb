<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(@book_show), class: "book_show" %>
  </div>

  <div class="col-md-8">
    <h2><%= @book.title %></h2>
    <h3><%= @book.author %></h3>
    <h3><%= @book.coauthor %></h3>
    <h2>Average Rating</h2>
    <div class="average-review-rating" data-score="<%=  @average_review %>"></div>
    <span>Total: <%= @book.reviews.count %> reviews..</span>
    <p><%= @book.description %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">

    <!-- Future Block -->
    <%= render @book.reviews %>

  <div>
    <%= link_to 'Add Review', new_book_review_path(@book) %>
  </div>

  </div>
</div>

<%= link_to 'Back', root_path %>

<% if user_signed_in? %>
  <% if @book.user_id.eql?(current_user.id) %>

    <%= link_to 'Edit', edit_book_path(@book) %><hr>
    <%= link_to 'Delete', book_path(@book), data: { confirm: 'Are You Sure..?' }, method: :delete %>

  <% end %>
<% end %>

<script>
  $('.review-rating').raty({
    readOnly: true,
    score: () => $(this).attr('data-score'),
    path: '/assets/'
  })
</script>
<script>
  $('.average-review-rating').raty({
    readOnly: true,
    score: () => $(this).attr('data-source'),
    path: '/assets/'
  })
</script>
