<div class="col-md-6 col-md-offset-3">
  <div class="edit-book-form">
    <h2>Edit Book</h2>

    <%= simple_form_for @book, html: { multipart: true } do |fld| %>
      <%= fld.select :category_id, @categories %>

      <%= fld.file_field :book_img %>

      <%= fld.input :title, label: 'Book Title' %>
      <%= fld.input :description %>
      <%= fld.input :author %>
      <%= fld.input :coauthor %>

      <%= fld.button :submit, class: "btn-custom2" %>
    <% end %>

  </div>
</div>

